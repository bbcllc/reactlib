{
  "name": "@bbllc/reactlib",
  "version": "1.0.0",
  "description": "A group of reusable React components and hooks.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest --watch",
    "test:once": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn format && yarn lint && yarn test",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbcllc/reactlib.git"
  },
  "author": "Brandon Ramirez <bramirez96>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bbcllc/reactlib/issues"
  },
  "homepage": "https://github.com/bbcllc/reactlib#readme",
  "devDependencies": {
    "@testing-library/react": "^11.2.6",
    "@types/babel__core": "^7.1.14",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js|jsx)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "@types/react-dom": "^17.0.3",
    "react-dom": "^17.0.2"
  }
}
